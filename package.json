{
  "name": "jsf.js_next_gen",
  "version": "4.0.5-beta.2",
  "description": "A next generation typescript reimplementation of jsf.js",
  "main": "dist/window/faces.js",
  "scripts": {
    "doc": "npx typedoc --tsconfig src/main/typescript/tsconfig-typedoc.json",
    "test": "cross-env  mocha",
    "coverage": "cross-env nyc --reporter=html --reporter=text mocha",
    "build-production": "NODE_OPTIONS='--import tsx' webpack --mode production --env FILE_NAME=jsf  && tsx ./remap.ts --production",
    "build-development": "NODE_OPTIONS='--import tsx' webpack --mode development --env FILE_NAME=jsf-development  && tsx ./remap.ts --development",
    "build": "npm run doc && npm run build-development && npm run build-production",
    "serve": "npx http-server -p 8900 -b -g -o ./dist/"
  },
  "keywords": [
    "myfaces",
    "jsf",
    "typescript"
  ],
  "author": "Werner Punz werpu@apache.org",
  "license": "Apache-2.0",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/sinon": "^21.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "chai": "^6.2.2",
    "cross-env": "^10.1.0",
    "html-webpack-plugin": "^5.6.5",
    "http-server": "^14.1.1",
    "jsdom": "^27.3.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^11.3.0",
    "nise": "^6.1.1",
    "npm-check-updates": "^19.2.0",
    "nyc": "^17.1.0",
    "replace-in-file": "^8.4.0",
    "rxjs": "^7.8.2",
    "sinon": "^21.0.1",
    "terser-webpack-plugin": "^5.3.16",
    "ts-loader": "^9.5.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "mona-dish": "0.28.13"
  }
}
